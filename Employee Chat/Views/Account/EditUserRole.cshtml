@model Employee_Chat.Models.EditUserRoleModel

<h2>Edit User Role</h2>

<div class="card" style="max-width: 600px; margin: auto; padding: 20px;">
    <form asp-action="EditUserRole" method="post">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <div class="form-group">
            <label>Email</label>
            <input type="text" class="form-control" value="@Model.Email" readonly />
        </div>
        <div class="form-group mt-3">
            <label for="SelectedRole">Select Role</label>
            <select id="SelectedRole" name="SelectedRole" class="form-control">
                <option value="">-- Select a Role --</option>
                @foreach (var role in Model.AllRoles)
                {
                    <option value="@role" selected="@(role == Model.SelectedRole ? "selected" : null)">@role</option>
                }
            </select>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Save</button>
    </form>
</div>
