@model Employee_Chat.Models.ManageUsersModel

<h2>Manage Users</h2>
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.Email</td>
                <td>
                    @string.Join(", ", Model.UserRoles[user.Id])
                </td>
                <td>
                    <a asp-action="EditUserRole" asp-route-userId="@user.Id" class="btn btn-primary">Edit Roles</a>
                </td>
            </tr>
        }
    </tbody>
</table>
