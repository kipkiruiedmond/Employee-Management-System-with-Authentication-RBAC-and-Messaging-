@model Employee_Chat.Models.EmployeeProfileViewModel

<h2>Employee Details</h2>

<div class="card" style="max-width: 600px; margin: auto; padding: 20px;">
    <div class="card-body">
        <h4 class="card-title">Employee Information</h4>
        <p><strong>Username:</strong> @Model.Username</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Role(s):</strong> @Model.Roles</p>
    </div>
</div>

<a href="@Url.Action("Index", "Employee")" class="btn btn-primary mt-3">Back to List</a>
